<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tubes.me.renttel_u.Booking">

    <ImageView
        android:src="@drawable/ic_directions_bike_black_24dp"
        android:id="@+id/imagemtr"
        android:layout_width="match_parent"
        android:layout_height="268dp" />

    <LinearLayout
        android:id="@+id/lihatmaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="LihatMaps"
        android:layout_marginTop="20dp">

        <ImageView
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"/>

        <TextView
            android:text="Lihat di Maps"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/telepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="Telepon"
        android:layout_marginTop="20dp">

        <ImageView
            android:src="@drawable/ic_call_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"/>

        <TextView
            android:text="Telepon"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/kirimpesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="kirimpesan"
        android:layout_marginTop="20dp">

        <ImageView
            android:src="@drawable/ic_email_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"/>

        <TextView
            android:text="Kirim Pesan"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fasilitas yang ditawarkan : "/>

    <TextView
        android:id="@+id/editfasilitas"
        android:layout_width="match_parent"
