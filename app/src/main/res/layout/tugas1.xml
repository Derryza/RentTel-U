<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tubes.me.renttel_u.Booking">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:scaleType="fitXY"
        android:src="@drawable/motor"
        android:id="@+id/imageView2" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="340dp"
        android:layout_height="190dp"
        android:background="@color/colorwhite"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental Motor Aby"
            android:textSize="18sp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp" />

        <LinearLayout
            android:id="@+id/lihatmaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="LihatMaps"
            android:paddingLeft="16dp">

            <ImageView
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"/>

            <TextView
                android:text="Lihat di Maps"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="Telepon"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp">

            <ImageView
                android:src="@drawable/ic_call_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"/>

            <TextView
                android:text="Telepon"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/kirimpesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="kirimpesan"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp">

            <ImageView
                android:src="@drawable/ic_email_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"/>

            <TextView
                android:text="Kirim Pesan"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>